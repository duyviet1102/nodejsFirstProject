<div class="mt-4">
  <h3>Info của tôi</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên</th>
        <th scope="col">Mức độ</th>
        <th scope="col">Thời gian tạo</th>
      </tr>
    </thead>
    <tbody>
      {{#each course}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.createAt}}</td>
          <td>
            <a
              href="/course/{{this._id}}/edit"
              class="btn btn-danger"
            >Update</a>
            <a
              href=""
              class="btn btn-warning"
              data-toggle="modal"
              data-target="#delete-receipt-modal"
              data-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{! confirm receipt }}

<!-- Modal -->
<div
  class="modal fade"
  id="delete-receipt-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Do u want to delete</h5>
        <button
          type="button"
          class="close close position-absolute top-0 end-0"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Close</button>
        <button type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>

{{! <script>
 let btn = document.querySelector('.btn-dark')
 let courseId = btn.getAttribute("data-bs-whatever")
 let deleteBtn = document.querySelector('.btn-danger')
 let deleteForm = document.forms["delete-form"]
 console.log(deleteForm)
 deleteBtn.addEventListener('click',function(){
  deleteForm.action = `/course/${courseId}?_method=DELETE`
  deleteForm.submit()
  console.log(courseId)
 })
</script> }}

