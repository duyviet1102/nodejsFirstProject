<div class="mt-4">
  <h3>Cập nhật hóa đơn</h3>
  <form class="mt-4" method="POST" action="/course/{{course._id}}?_method=PUT">
    <label for="name">Tên</label>
    <input
      type="text"
      value="{{course.name}}"
      class="form-control"
      id="name"
      name="name"
    />
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <label for="videoId">video id</label>
    <input
      type="text"
      value="{{course.videoId}}"
      class="form-control"
      id="videoId"
      name="videoId"
    />
    <label for="level">Level</label>
    <input
      type="text"
      value="{{course.level}}"
      class="form-control"
      id="level"
      name="level"
    />
    <label for="level">Video image</label>
    <input
      type="text"
      value="{{course.image}}"
      class="form-control"
      name="image"
      id="image "
    />
    <button class="btn btn-primary" type="submit">Cập nhật hóa đơn</button>
  </form>
</div>